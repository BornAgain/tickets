{% extends "::layout.html.twig" %}

{% block pageheader %}
    Ticket Management
    <small>Update a ticket</small>
{% endblock %}

{% block content %}
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">Ticket Form</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        {{ form_start(form, {'method': 'POST'}) }}
            <div class="box-body">
                <div class="form-group">
                    <label for="title">{{ form_label(form.title) }}</label>
                    {{ form_widget(form.title, {'attr': {'class': 'form-control','placeholder': 'Enter Title'}}) }}
                </div>
                <div class="form-group">
                    <label for="project">{{ form_label(form.projet) }}</label>
                    {{ form_widget(form.projet, {'attr': {'class': 'form-control','placeholder': 'Institution Country'}}) }}
                </div>                 
                <div class="form-group">
                    <label for="content">{{ form_label(form.content) }}</label>
                    {{ form_widget(form.content, {'attr': {'class': 'form-control itss_ticketsbundle_ticket[content]','placeholder': 'Institution Country'}}) }}
                </div>               
            </div><!-- /.box-body -->

            <div class="box-footer">
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        {{ form_end(form) }}
        <!--<textarea class="editor1" name="editor1"></textarea>-->
    </div><!-- /.box -->
{% endblock %}