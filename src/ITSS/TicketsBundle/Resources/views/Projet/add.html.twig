{% extends "::layout.html.twig" %}

{% block pageheader %}
    Project Management
    <small>Add a new project</small>
{% endblock %}

{% block content %}
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">Project Form</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        {{ form_start(form, {'method': 'POST'}) }}

        <div class="box-body">
            <div class="col-md-6" >
                <div class="form-group">
                    <label for="name">{{ form_label(form.name) }}</label>
                    {{ form_widget(form.name, {'attr': {'class': 'form-control','placeholder': 'Project Name'}}) }}
                </div>
                <div class="form-group">
                    <label for="dateBegin">{{ form_label(form.dateBegin) }}</label>
                    {{ form_widget(form.dateBegin, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label for="dateEnd">{{ form_label(form.dateEnd) }}</label>
                    {{ form_widget(form.dateEnd, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-6" >
                <div class="form-group">
                    <label for="statut">{{ form_label(form.statut) }}</label>
                    {{ form_widget(form.statut, {'attr': {'class': 'form-control','placeholder': 'Project Statut'}}) }}
                </div>
                <div class="form-group">
                    <label for="client">{{ form_label(form.client) }}</label>
                    {{ form_widget(form.client, {'attr': {'class': 'form-control','placeholder': 'Project Client'}}) }}
                </div>
                <div class="form-group">
                    <label for="product">{{ form_label(form.product) }}</label>
                    {{ form_widget(form.product, {'attr': {'class': 'form-control','placeholder': 'Project Product'}}) }}
                </div>
            </div>
        </div><!-- /.box-body -->

        <div class="box-footer">
            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
        {{ form_end(form) }}
    </div><!-- /.box -->
{% endblock %}
