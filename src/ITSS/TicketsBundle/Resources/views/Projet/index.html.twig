{% extends "::layout.html.twig" %}

{% block pageheader %}
    Project Management
    <small>List of projects</small>
{% endblock %}

{% block content %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Data Table With Full Features</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.name }}</td>
                        <td>
                            <a class="btn btn-info btn-small" href="{{ path("itss_tickets_project_see",{'id':entity.id}) }}" title="view"><i class="glyphicon glyphicon-search" ></i></a>
                            <a class="btn btn-warning btn-small" href="{{ path("itss_tickets_project_update",{'id':entity.id}) }}" title="update"><i class="glyphicon glyphicon-edit" ></i></a>
                            <a class="btn btn-danger btn-small" href="{{ path("itss_tickets_project_delete",{'id':entity.id}) }}" title="remove"><i class="glyphicon glyphicon-remove" ></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div><!-- /.box-body -->
    </div><!-- /.box -->    
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- DATA TABES SCRIPT -->
    <script src="{{ asset('plugins/datatables/jquery.dataTables.js') }}" type="text/javascript"></script>
    <script src="{{ asset('plugins/datatables/dataTables.bootstrap.js') }}" type="text/javascript"></script>
    <!-- SlimScroll -->
    <script src="{{ asset('plugins/slimScroll/jquery.slimscroll.min.js') }}" type="text/javascript"></script>
    <!-- FastClick -->
    <script src='{{ asset('plugins/fastclick/fastclick.min.js') }}'></script>
    <!-- AdminLTE App -->
    {#<script src="{{ asset('dist/js/app.min.js') }}" type="text/javascript"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="{{ asset('dist/js/demo.js') }}" type="text/javascript"></script>#}
    <!-- page script -->
    <script type="text/javascript">
        $(function () {
            $("#example1").dataTable();
            $('#example2').dataTable({
                "bPaginate": true,
                "bLengthChange": false,
                "bFilter": false,
                "bSort": true,
                "bInfo": true,
                "bAutoWidth": false
            });
        });
    </script>
{% endblock %}
