{% extends "::base.html.twig" %}

{% block pagetitle %}
    <div class="title_left">
        <h2>AcMedia <small>Voir événement</small></h2>
    </div>
{% endblock %}
{% block body %}

    <div class="x_title row">
        <div class="col-md-6 col-sm-6 col-xs-12">
            <a class="btn btn-warning" href="{{ path("ac_media_bundle_evenement_modifier",{'id':entity.id}) }}">Modifier <i class="fa fa-pencil-square-o"></i></a>
            <a class="btn btn-danger" href="{{ path("ac_media_bundle_evenement_supprimer",{'id':entity.id}) }}">Supprimer <i class="fa fa-trash-o"></i></a>
        </div>
        <div class="pull-right col-md-6 col-md-6 col-md-12">
            <a class="btn btn-success text-right pull-right" href="{{ path("ac_media_bundle_evenement_ajouter",{'id':entity.id}) }}"><i class="fa fa-plus-square-o"></i> Ajouter Evenement</a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="x_content row">
        <div id="demo-form2" data-parsley-validate class="form-horizontal form-label-left col-md-9 col-sm-9 col-xs-9">
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="month-title">Le thème du mois <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <span type="title" class="form-control" id="exampleInputTitle1">{{ entity.themeMois.theme }}</span>
                </div>
            </div> 
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="title">Thème <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <span type="title" class="form-control" id="exampleInputTitle2">{{ entity.theme }}</span>

                </div>
            </div>                                            
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Date<span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <span type="title" class="form-control" id="exampleInputTitle3">{{ entity.date |date("d/m/Y") }}</span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="type">Type <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <span type="title" class="form-control" id="exampleInputTitle4">{{ entity.type }}</span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="orateur">Orateur <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <span type="title" class="form-control" id="exampleInputTitle5">{{ entity.orateur.name }}</span>
                </div>
            </div>                                        
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="conducteur">Conducteur <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <span type="title" class="form-control" id="exampleInputTitle6">{{ entity.conducteur.name }}</span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="choeur">Choeur <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <span type="title" class="form-control" id="exampleInputTitle6">{{ entity.choeur }}</span>
                </div>
            </div>                                                

            <div class="control-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Mots clé</label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <span type="title" class="form-control" id="exampleInputTitle6">{{ entity.tags }}</span>
                    <div id="suggestions-container" style="position: relative; float: left; width: 250px; margin: 10px;"></div>
                </div>
            </div>                                        
            <div class="ln_solid"></div>
        </div>
        <div class="col-md-3 col-sm-3 col-xs-12">
            <table>
                {% for file in entity.files %}                                    
                    <tr>
                        <td><a href="{{ path("ac_media_bundle_file_download",{'id':file.id})}}">{{ file.name}}</a></td>
                        <td></td>
                        <td>
                            <a href="{{ path("ac_media_bundle_file_supprimer",{'id':file.id})}}"><span class="glyphicon glyphicon-trash"></span></a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
            {{ form(form) }}
        </div>
    </div>

{% endblock %}
